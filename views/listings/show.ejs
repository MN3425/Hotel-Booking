<% layout('/layouts/boilerplate') -%>
<body>
<div class ="row mt-3">

    <div class="col-8 offset-2">
        <h3>Listing details</h3>
    </div>
    <div class="boxx card col-6 offset-2" >
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">
    </div>
    <div class="boxx card-body">
        <h5 class="card-title"><%= listing.title %></h5>
        <p class="card-text"><%= listing.description %></p>
        <p class="card-text"><%= listing.location%></p>
        <p class="card-text"><%= listing.country %></p>
        </div>
</div>
    <a href="/listings/<%= listing._id %>/edit" class="link-primary link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover"><button type="button" class="btn btn-danger">EDIT</button></a>
    <Form method ="POST" action="/listings/<%=listing._id%>?_method=DELETE">
        <button type="button" class="btn btn-danger">Delete this listing</button>
        
    </Form>
</body>