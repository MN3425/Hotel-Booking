<% layout('/layouts/boilerplate') -%>
<body>
    <h1>Create a New Listing</h1>
    <form method="POST" action="/listings" class="needs-validation" novalidate> 

    <div class="mb-3">
      <label for="title" class="form-label">Title</label>
      <input class="form-control" name="listing[title]" placeholder="enter title" type="text" required/>
    </div>

    <div class="mb-3 row">
      <label for="Description" class="form-label">Description</label>
      <textarea
      name="listing[description]"
      placeholder="enter description"
      class="form-control"
      required
      ></textarea>
    </div>

    <div>
      <label for="Image" class="form-label">Image</label>
      <input
        name="listing[image]"
        placeholder="enter image URL/Link"
        type="text"
        class="form-control"
      />
    </div>

    <div class="md-3 col-md-12">
      <label for="Price" class="form-label">Price</label>
      <input name="listing[price]" class="form-control" placeholder="enter price" required/>
    </div>

    <div class="md-3 col-md-12">
      <label for="Country" class="form-label">Country</label>
      <input name="listing[country]" class="form-control" placeholder="enter country" type="text" required/>
    </div>

    <div>
      <label for="Location" class="form-label">Location</label>
      <input
        name="listing[location]"
        placeholder="enter location"
        type="text"
        class="form-control"
        required
      />
    </div>
    <br></br>

    <div class="col-auto">
      <button type="submit" class="btn btn-primary mb-3">Add</button>
    </div>
    </form>

</body>